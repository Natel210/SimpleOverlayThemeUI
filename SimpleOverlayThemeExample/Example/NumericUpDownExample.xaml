<UserControl x:Class="SimpleOverlayThemeExample.Example.NumericUpDownExample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleOverlayThemeExample.Example"
             mc:Ignorable="d" 
             Style="{StaticResource SimpleOverlayTheme.UserControl.Default}"
             xmlns:customControl="clr-namespace:SimpleOverlayTheme.CustomControl;assembly=SimpleOverlayTheme"
             d:Height="{StaticResource exampleHeight}" d:DesignWidth="800">
    <StackPanel HorizontalAlignment="Left">
        <customControl:NumericUpDown FontSize="32" Margin="10" Width="500"/>
        <customControl:NumericUpDown FontSize="32" Margin="10" Width="500" Interval="10" Minimum="-200" Maximum="400"/>
        <customControl:NumericUpDown FontSize="32" Margin="10" Width="500" Interval="0.01" UseInteger="False" DecimalPlaces="2"/>
    </StackPanel>
</UserControl>
