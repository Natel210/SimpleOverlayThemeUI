<Window x:Class="GrayThemeUI_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrayThemeUI_Test"
        xmlns:helper="clr-namespace:GrayThemeUI.Helper;assembly=GrayThemeUI"
        xmlns:control="clr-namespace:GrayThemeUI.CustomControl;assembly=GrayThemeUI"
        xmlns:example="clr-namespace:GrayThemeUI_Test.ExamplePage"
        Style="{StaticResource GrayThemeUI.Window}"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" d:Height="800" Width="600">
    <ScrollViewer>
        <StackPanel>


            <Frame x:Name="windowHeaderExample"/>
            <Frame x:Name="labelTextsExample" Margin="5"/>
            <Frame x:Name="buttonExample" Margin="5"/>
            <Border HorizontalAlignment="Left" Margin="5">
                <CheckBox Content=" CheckBox" Style="{StaticResource GrayThemeUI.CheckBox}" Width="120" Height="30"/>
            </Border>
            <Border HorizontalAlignment="Left" Margin="5">
                
            </Border>

            <Border HorizontalAlignment="Left" Margin="5">
                <DataGrid Name="dataGrid" FontSize="16" AutoGenerateColumns="False" CanUserAddRows="False" CanUserResizeColumns="False" Style="{StaticResource GrayThemeUI.DataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Id}" Width="*">
                            <DataGridTextColumn.Header>
                                <TextBlock Text=" ID " FontSize="30"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header=" Name " Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header=" Age " Binding="{Binding Age}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                <GroupBox Header=" GroupBox " Margin="10" Style="{StaticResource GrayThemeUI.GroupBox}" Width="150">
                    <ComboBox x:Name="grayThemeUIComboBox" SelectedIndex="1" Style="{StaticResource GrayThemeUI.ComboBox}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Left">
                        <ComboBoxItem VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <ComboBoxItem.Content>
                                <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                    <TextBlock Text="ComboBox1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                                </Border>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                        <ComboBoxItem VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <ComboBoxItem.Content>
                                <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                    <TextBlock Text="ComboBox2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                                </Border>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                        <ComboBoxItem VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <ComboBoxItem.Content>
                                <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                    <TextBlock Text="ComboBox3" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                                </Border>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                        <ComboBoxItem Width="{Binding ActualWidth, ElementName=grayThemeUIComboBox}" IsSelected="False">
                            <ComboBoxItem.Content>
                                <Button Content=" Button " Style="{StaticResource GrayThemeUI.Button.Square}"/>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>
                    </ComboBox>
                </GroupBox>
                <GroupBox Header=" GroupBox Color " Margin="10" Style="{StaticResource GrayThemeUI.GroupBox}" Background="#40FF00FF">
                    <ComboBox x:Name="grayThemeUIComboBox2" SelectedIndex="0" Style="{StaticResource GrayThemeUI.ComboBox}" Background="#5000FF00">
                        <ComboBoxItem Content=" ComboBox1 "/>
                        <ComboBoxItem Content=" ComboBox2 "/>
                        <ComboBoxItem Content=" ComboBox3 "/>
                    </ComboBox>
                </GroupBox>
                <GroupBox Header=" none style combo" Margin="10" Style="{StaticResource GrayThemeUI.GroupBox}">
                    <ComboBox x:Name="grayThemeUIComboBox3" SelectedIndex="0" Background="#5000FF00">
                        <ComboBoxItem Content=" ComboBox1 "/>
                        <ComboBoxItem Content=" ComboBox2 "/>
                        <ComboBoxItem Content=" ComboBox3 "/>
                    </ComboBox>
                </GroupBox>
            </StackPanel>

            <Border HorizontalAlignment="Left" Margin="5">

            </Border>
            
            <Border HorizontalAlignment="Left" Margin="5">

            </Border>

