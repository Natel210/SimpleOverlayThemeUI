<Application x:Class="GrayThemeUI_Test.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GrayThemeUI_Test"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:theme="clr-namespace:GrayThemeUI.Theme;assembly=GrayThemeUI"
             mc:Ignorable="d"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Design-time resources for Light and Dark themes -->
                <ResourceDictionary d:IsDesignTimeCreatable="True" d:DesignTimeResources="pack://application:,,,/GrayThemeUI;component/Theme/LightModeDummy.xaml"/>
                <!--<ResourceDictionary d:IsDesignTimeCreatable="True" Source="pack://application:,,,/GrayThemeUI;component/Theme/DarkModeDummy.xaml"/>-->

                <!-- Main application resources -->
                <ResourceDictionary Source="pack://application:,,,/GrayThemeUI;component/Main.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
