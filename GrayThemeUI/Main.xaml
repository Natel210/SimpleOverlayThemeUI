    <Style x:Key="GrayThemeUI.Window" TargetType="Window">
        <Setter Property="FontSize">
            <Setter.Value>
                <DynamicResource  ResourceKey="GrayThemeUI.Internal.FontSize.Default"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground">
            <Setter.Value>
                <SolidColorBrush Color="{DynamicResource GrayThemeUI.Internal.DefaultBrush.Foreground}"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{DynamicResource GrayThemeUI.Internal.DefaultBrush.Background}"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="GrayThemeUI.Page" TargetType="Page">
